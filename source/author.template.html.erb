<header class="header">
  <section class="section orange iso section-slim">
    <div class="section-content navigation">
      dbt
    </div>
  </section>
</header>

<main class="main">
  <section class="section silver offset">
    <div class="section-content">
      <div class="row">
        <h2>Packages by <%= author %></h2>
        <div class="tiles">
          <% data.packages.each do |name, package| %>
          <% if package.namespace == author %>
          <%= partial "package_card", :locals => { :package => package } %>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</main>
